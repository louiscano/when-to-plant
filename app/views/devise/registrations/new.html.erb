<div class="container mt-3 p-3 rounded w-100 w-md-75 m-auto" style="margin-bottom:250px!important;">
<div class="align-items-center p-3" style="background-color: white; border-radius: 10px!important;">
  <h2 class="text-center mb-4">Créer un compte</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :prenom,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "given-name" } %>
      <%= f.input :nom,
                  required: true,
                  input_html: { autocomplete: "family-name" } %>
      <%= f.input :email,
                  required: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: true,
                  label: "Mot de passe",
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: "Confirmation du mot de passe",
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :avatar, as: :file, label: "Avatar" %>
    </div>

    <div class="form-actions text-center mt-3 mb-3">
      <%= f.button :submit, "S'inscrire", data: { action: "alert#showAlert", alert_target: "form" }, class: "btn btn-primary mt-4 mb-4 rounded-pill" %>
    </div>
  <% end %>

  <div class="text-center">
    <p><i>Vous avez déjà un compte ?</i></p>
    <%= link_to "Se connecter", new_session_path(resource_name), class: "btn btn-primary mb-3 rounded-pill" %>
  </div>
  </div>
</div>
