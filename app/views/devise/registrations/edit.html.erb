<div class="container mb-3 mt-3 border rounded bg-light" style="margin-bottom:250px!important;">
  <h2>Modifier <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :prenom, required: true, autofocus: true, input_html: { autocomplete: "given-name" } %>
      <%= f.input :nom, required: true, input_html: { autocomplete: "family-name" } %>
      <%= f.input :email, required: true, input_html: { autocomplete: "email" } %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Email en attente de confirmation: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, hint: "Laisser vide si vous ne souhaitez pas le modifier", required: false, input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, required: false, input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password, hint: "Nous avons besoin de votre mot de passe pour confirmer les changements", required: true, input_html: { autocomplete: "current-password" } %>

      <%= f.input :avatar, as: :file, label: "Avatar" %>

      <% if resource.avatar.attached? %>
        <div class="mt-3">
          <%= image_tag resource.avatar.variant(resize_to_limit: [40, 40]), class: "img-thumbnail" %>
        </div>
      <% end %>
    </div>

    <div class="form-actions btn btn-success rounded">
      <%= f.button :submit, "Modifier", class:"text-white" %>
    </div>
  <% end %>

  <br>
  <h3>Supprimer mon compte</h3>

  <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr?", turbo_confirm: "Êtes-vous sûr?" }, method: :delete, class:'btn btn-success mb-3' %>
<br>
  <%= link_to "Retour", :back, class: "btn btn-primary mb-3 rounded", style:'margin-bottom:250px!important;' %>
</div>
