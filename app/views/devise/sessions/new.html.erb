<div class="container mb-5 mt-3 p-3 rounded w-100 w-md-75 m-auto" style="margin-bottom:250px!important;">
  <div class="align-items-center py-4" style="background-color: white; border-radius: 10px;">
    <h2 class="text-center mb-4">Se connecter</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {
      data: {
        controller: "alert",
        alert_icon_value: "success",
        alert_title_value: "Bienvenue",
        alert_html_value: "Créer un nouveau post.",
        confirm_button_text_value: "Tout est bon!",
        action: "submit->alert#initSweetalert",
        turbo: false
      }
    }) do |f| %>
      <div class="form-inputs m-3 mb-4">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    label: "Mot de passe",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me,
                    as: :boolean,
                    label: "Rester connecté" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex flex-column align-items-center">
        <%= f.button :submit, "Se connecter", class: "btn btn-success mt-3 mb-3 rounded-pill text-white" %>
        <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "mt-2" %>
      </div>
    <% end %>

    <div class="text-center mt-5 mb-3">
      <p class="mt-3"><i>Créer un compte pour vous connecter</i></p>
      <%= link_to "Je m'inscris", new_registration_path(resource_name), class: "btn btn-primary rounded-pill" %>
    </div>
  </div>
</div>
